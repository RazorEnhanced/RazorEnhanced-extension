{
    "name": "razorenhanced",
    "displayName": "RazorEnhanced",
    "description": "RazorEnhanced VS Code Extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/RazorEnhanced/RazorEnhanced-extension.git"
    },
    "bugs": {
        "url": "https://github.com/RazorEnhanced/RazorEnhanced-extension/issues"
    },
    "homepage": "https://github.com/RazorEnhanced/RazorEnhanced-extension#readme",
    "author": "RazorEnhanced Team",
    "license": "GPL-3",
    "keywords": [
        "ultima",
        "razorenhanced",
        "vscodium",
        "extension"
    ],
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:razorEnhanced.record",
        "onCommand:razorEnhanced.stopRecording",
        "onCommand:razorEnhanced.play"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "razorEnhanced.record",
                "title": "Record",
                "when": "!razorEnhanced.isRecording"
            },
            {
                "command": "razorEnhanced.stopRecording",
                "title": "Stop Recording",
                "when": "razorEnhanced.isRecording"
            },
            {
                "command": "razorEnhanced.play",
                "title": "Play"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "razorEnhanced.record",
                    "group": "navigation",
                    "when": "editorLangId == python && editorTextFocus && !razorEnhanced.isRecording",
		    "title": "RazorEnhanced: Record"		    
                },
                {
                    "command": "razorEnhanced.stopRecording",
                    "group": "navigation",
                    "when": "editorLangId == python && razorEnhanced.isRecording",
		    "title": "RazorEnhanced: StopRecord"
                },
                {
                    "command": "razorEnhanced.play",
                    "group": "navigation",
		    "when": "editorLangId == python && editorTextFocus",
		    "title": "RazorEnhanced: Play"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "RazorEnhanced Configuration",
            "properties": {
                "razorEnhanced.serverPort": {
                    "type": "number",
                    "default": 15454,
                    "description": "The port number used for the gRPC server connection."
                }
            }
	}
    },
    "scripts": {
        "pretest": "npm run lint",
        "lint": "eslint src",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.60.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^10.7.3",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.11.1",
        "@grpc/proto-loader": "^0.6.13"
    }
}
