{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(",", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(while|for|if|else)\\b",
        "decreaseIndentPattern": "^\\s*(endwhile|endfor|else|endif)\\b"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*if.*$",
            "afterText": "^.*$",
            "action": { "indentAction": "Indent" }
        },
        {
            "beforeText": "^\\s*else.*$",
            "afterText": "^.*$",
            "action": { "indentAction": "IndentOutdent" }
        },
        {
            "beforeText": "^\\s*endif.*$",
            "afterText": "^.*$",
            "action": { "indentAction": "Outdent" }
        }
    ]
}